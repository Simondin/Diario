<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/giorno" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/misura_mattina"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/round_corner">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblMisuraMattina"
                android:text="Mattina"
                android:background="@color/bgd_lbl_misura"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtMisuraMattina"
                android:gravity="center" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:id="@+id/misura_pomeriggio"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/round_corner">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblMisuraPomeriggio"
                android:text="Pomeriggio"
                android:background="@color/bgd_lbl_misura"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtMisuraPomeriggio"
                android:gravity="center" />
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:id="@+id/misura_sera"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/round_corner">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lblMisuraSera"
                android:text="Sera"
                android:background="@color/bgd_lbl_misura"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtMisuraSera"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
